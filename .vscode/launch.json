{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) Launch simplest case",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/src/eflomal",
            "args": ["-s",
                    "${workspaceRoot}/simple/corpus.greek",
                    "-t",
                    "${workspaceRoot}/simple/corpus.letters",
                    "-f",
                    "${workspaceRoot}/fwd_links_output.txt",
                    "-r",
                    "${workspaceRoot}/reverse_links_output.txt",
                    "-M",
                    "1",
                    "-m",
                    "1",
                    "-1",
                    "10"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}